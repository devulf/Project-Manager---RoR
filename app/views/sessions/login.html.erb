<div id="project"><% @page_title = "Project Management - Login" -%>
<div id= "login">
<h1>Log in</h1>
<%= form_tag(:action => 'login_attempt') do %>
<p>
Username:</br> <%= text_field_tag(:username_or_email) %>
</p>

<p>
Password:</br> <%= password_field_tag :login_password %>
</p>

<%= submit_tag("Log In") %>
<% end %>
</div>
<div class="invalid"><%= flash[:invalid_login] %></div>
</div>
