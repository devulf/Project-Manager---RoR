<div id="project"><% @page_title = "Project Management - Register" -%>
<div class= "register">
  <h1>Register</h1>
  <%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>

    <p>
      Username:</br> <%= f.text_field :username%>
    </p>

    <p>
      Email:</br> <%= f.text_field :email%>
    </p>

    <p>
      Password:</br> <%= f.password_field :password%>
    </p>

    <p>
      Password(conf.):</br> <%= f.password_field :password_confirmation%>
    </p>

    <%= f.submit :Register %>
  <% end %>

  <% if @user.errors.any? %>
<ul class="reg_errors">
<% for message_error in @user.errors.full_messages %>
<li>* <%= message_error %></li>
<% end %>
</ul>
  <% end %>
</div></div>
