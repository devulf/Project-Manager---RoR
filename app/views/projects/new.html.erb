<div id="project">
<h1> Create a new project </h1>
<% if @project.errors.any? %>
<div class="alert alert-error">
  <h2><%= pluralize(@project.errors.count, "error") %> in the form. Please correct.

    <ul>
      <% @project.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>

  </div>
  <% end %>

<%= form_for(:project, :url => {:controller => 'projects', :action => 'create'}) do |f| %>
  <div class="text_field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
    <br />

  <%= f.label :description %><br />
    <%= f.text_area :description %>
    <br />


  <%=f.label 'Users Assigned' %>
    <% @users.each do |u| %>
      <%= check_box_tag :user_ids, u.id, @project.users.include?(u), :name => 'project[user_ids][]' -%>

        <%= label_tag :users_ids, u.username.capitalize %>

<% end %>

    <br />


    <%= f.label :start_date %><br />
    <%= f.datetime_select :start_date %>
    <br />

    <%= f.label :end_date %><br />
    <%= f.datetime_select :end_date %>
    <br />
  </div>
    <div class="submit">
    <%= f.submit "Skapa" %>
  </div>


  <% end %></div>
